# ================================
# CONFIGURAÇÕES BÁSICAS
# ================================

# Ambiente de execução (dev, staging, prod, lambda)
ENVIRONMENT=dev

# Configurações do servidor MCP
MCP_SERVER_NAME=AgentCoreEnhanced

# Configurações de logging
LOG_LEVEL=INFO

# ================================
# CONFIGURAÇÕES LLM PROVIDERS
# ================================

# Provedor principal (ollama, openai, gemini)
MAIN_PROVIDER=ollama

# OpenAI Configurações
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Google Gemini Configurações
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.7

# Configurações do Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:latest
OLLAMA_EMBEDDINGS_MODEL=nomic-embed-text
OLLAMA_TEMPERATURE=0.7

# ================================
# CONFIGURAÇÕES CHROMADB
# ================================

CHROMA_PERSIST_DIRECTORY=./chroma_db
VECTOR_SEARCH_K_RESULTS=3

# ================================
# FEATURE TOGGLES
# ================================

# Controle individual de features (true/false)
FEATURE_PROMPT_EVALUATION_ENABLED=true
FEATURE_ADVANCED_REASONING_ENABLED=true
FEATURE_OAUTH2_AUTHENTICATION_ENABLED=false
FEATURE_ENHANCED_LOGGING_ENABLED=true
FEATURE_PERFORMANCE_MONITORING_ENABLED=true
FEATURE_EXPERIMENTAL_FEATURES_ENABLED=false

# ================================
# OAUTH2 AUTHENTICATION
# ================================

# Configurações OAuth2 (apenas se FEATURE_OAUTH2_AUTHENTICATION_ENABLED=true)
OAUTH2_ENABLED=false
OAUTH2_ISSUER=https://your-auth-server.com
OAUTH2_CLIENT_ID=your_client_id
OAUTH2_CLIENT_SECRET=your_client_secret
OAUTH2_AUTHORIZATION_ENDPOINT=https://your-auth-server.com/oauth2/authorize
OAUTH2_TOKEN_ENDPOINT=https://your-auth-server.com/oauth2/token
OAUTH2_JWKS_URI=https://your-auth-server.com/.well-known/jwks.json
OAUTH2_USERINFO_ENDPOINT=https://your-auth-server.com/userinfo
OAUTH2_AUDIENCE=agent-core-api
OAUTH2_ALGORITHM=RS256
OAUTH2_LEEWAY=10
OAUTH2_JWKS_CACHE_TTL=3600
OAUTH2_REQUEST_TIMEOUT=30
OAUTH2_REQUIRED_SCOPES=read,write

# ================================
# ENHANCED LOGGING
# ================================

# Configurações de logging estruturado
ENHANCED_LOGGING_ENABLED=true
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_METRICS_ENABLED=true
LOG_CONTEXT_VARIABLES=true

# ================================
# ADVANCED REASONING
# ================================

# Configurações do sistema de reasoning
REASONING_DEFAULT_COMPLEXITY=moderate
REASONING_MAX_STEPS=10
REASONING_ENABLE_REFLECTION=true
REASONING_CONFIDENCE_THRESHOLD=0.7

# ================================
# PROMPT EVALUATION
# ================================

# Configurações do sistema de avaliação
EVAL_AUTO_SAVE_RESULTS=true
EVAL_RESULTS_DIR=./eval_results
EVAL_DEFAULT_METRICS=relevance,accuracy,latency,safety
EVAL_PASS_THRESHOLD=70

# ================================
# AWS LAMBDA (apenas para deploy Lambda)
# ================================

# Configurações específicas para Lambda
AWS_REGION=us-east-1
AWS_LAMBDA_FUNCTION_NAME=agent-core-lambda
AWS_LAMBDA_TIMEOUT=300
AWS_LAMBDA_MEMORY_SIZE=1024

# AWS Secrets Manager (para OAuth2 e outras credenciais sensíveis)
AWS_SECRET_NAME=agent-core-secrets
AWS_SECRET_REGION=us-east-1

# ================================
# PERFORMANCE E MONITORING
# ================================

# Configurações de performance
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10
ENABLE_METRICS_COLLECTION=true
METRICS_RETENTION_DAYS=30

# Health check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# ================================
# WEATHER TOOL (opcional)
# ================================

# API key para serviço de clima (se usar weather tool)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather

# ================================
# CORS E SEGURANÇA
# ================================

# Configurações de CORS
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ================================
# DESENVOLVIMENTO E DEBUG
# ================================

# Configurações para desenvolvimento
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_STACK_TRACES=true
DEVELOPMENT_MODE=true
